
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @db.VarChar(36)  @id @default(uuid())
  name        String
  email       String @unique
  address     String
  addressNumber Int
  phone       String
  document    String
  shopkeeper Boolean
}

model Announcement {
  id      String  @db.VarChar(36)  @id @default(uuid())
  vehicle     Vehicle? @relation(fields: [announcementId], references: [id])
  announcementId String   
  sold    Boolean @default(false)
}

model Vehicle {
  id          String   @id @db.VarChar(36) @default(uuid())
  brand       String
  model       String 
  year        Int
  km          Int
  fuel        String
  ipva        Boolean
  licensed    Boolean
  color       String 
  plate       String
  gearbox     String
  bodywork    BodyWork @relation(fields: [bodyworkId], references: [id])
  bodyworkId  String @unique
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String @unique
  optional    Optional[]
  optionalId  String
  announcement Announcement[]
  announcementId String 
}

model BodyWork {
  id           String   @id @db.VarChar(36) @default(uuid())
  type         String
  vehicle      Vehicle?
  bodyworkId   String
}

model Category {
  id          String  @db.VarChar(36)  @id @default(uuid())
  type        String
  vehicle     Vehicle?
  categoryId  String
}

model Optional {
  id          String  @db.VarChar(36)  @id @default(uuid())
  name        String
  vehicle     Vehicle? @relation(fields: [optionalId], references: [id])
  optionalId  String
}